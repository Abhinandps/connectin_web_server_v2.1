{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/apps/cloud-gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/apps/cloud-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/apps/cloud-gateway",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "cloud-gateway": {
      "type": "application",
      "root": "apps/cloud-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/cloud-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cloud-gateway/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "post": {
      "type": "application",
      "root": "apps/post",
      "entryFile": "main",
      "sourceRoot": "apps/post/src",
      "compilerOptions": {
        "tsConfigPath": "apps/post/tsconfig.app.json"
      }
    },
    "analytics-reporting": {
      "type": "application",
      "root": "apps/analytics-reporting",
      "entryFile": "main",
      "sourceRoot": "apps/analytics-reporting/src",
      "compilerOptions": {
        "tsConfigPath": "apps/analytics-reporting/tsconfig.app.json"
      }
    }
  }
}